{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",  // Change to "off" to disable the console warning
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]  // Allow unused function arguments with leading _
  }
}
